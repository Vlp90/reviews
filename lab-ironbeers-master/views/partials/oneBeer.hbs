{{!-- <article class="beer-showcase"> --}}
{{#if @root.displayDetails}}
<article class="beer-showcase">
    {{else}}
    <article class="beer">
        {{/if}}
        <img style="width: 30px" src="{{this.image_url}}" alt="beer">
        <div>
            <h2>{{this.name}}</h2>
            <p>{{this.tagline}}</p>
            <p>{{this.description}}</p>

            {{#if @root.displayDetails}}
            <p> Food Pairing</p>
            <ul>
                {{#each this.food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>Brewer tips:{{this.brewers_tips}}</p>
            {{/if}}
        </div>
    </article>